{
  "name": "auth",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:client": "cd ./client && npm run start:dev",
    "start:dev": "nest start --watch & npm run start:client & wait",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "./scripts/create-envs dist/client/__env.json",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "tsc && eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0",
    "lint:ci": "npm run lint",
    "postlint": "cd client && npm run lint",
    "test": "jest",
    "test:ci": "jest --coverage",
    "posttest:ci": "cd client && npm run test:ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@fastify/static": "^6.10.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.5",
    "@nestjs/cqrs": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-fastify": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "supertokens-node": "^14.0.2"
  },
  "devDependencies": {
    "@fastify/http-proxy": "^9.1.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest": "^28.1.2",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
