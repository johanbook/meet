{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES7"
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*"]
}
