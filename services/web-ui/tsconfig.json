{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true ,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src"]
}
